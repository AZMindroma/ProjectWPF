<Window x:Class="WPFApp1.PasswordEnter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp1"
        mc:Ignorable="d"
        Title="PasswordEnter" Height="160" Width="300">
    <Grid>
        <PasswordBox x:Name ="pwBox" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" Width="150"/>
        <Label Content="Passwort eingeben:" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Button Content="Absenden" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top" FontSize="16" HorizontalContentAlignment="Center" Width="101" Height="30" Click="Button_Click" Background="White"/>

    </Grid>
</Window>
